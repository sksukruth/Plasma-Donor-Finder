                <%- include("flash") -%>
                <h1>Requesting Details</h1>
                <br>
                <form action='/request' method='POST'>
                      <div class="col-xl-8 order-xl-1">
                        <div class="card bg-secondary shadow">
                          <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                              <div class="col-8">
                                <h3 class="mb-0">Enter User  Details</h3>
                              </div>
                            </div>
                          </div>
                          <div class="card-body">
                              <h6 class="heading-small text-muted mb-4">User information</h6>
                              <h5 style="color: red">Required Fields *</h5>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="first_name" name="first_name"  id="first_name">First name<label style="color: red"> *</label> </label>
                                      <input type="text" id="input-first-name"  style="color: black" class="form-control  focused" placeholder="First name" name="first_name" required>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="last_name">Last name<label style="color: white"> *</label> </label>
                                      <input type="text" name="last_name" class='form-control focused '  style="color: black" id='last_name' placeholder="Last name" maxlength=30 title="Exceeded 30 characters">
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="pl-lg-4">
                              <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for='gender'>Gender<label style="color: red"> *</label> </label>
                                      <select placeholder="Gender" class="form-control  focused" id='gender' name='gender' required style="color: black" >
                                            <option></option>
                                            <option>Male</option>
                                            <option>Female</option> 
                                        </select>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="blood_group">Blood group<label style="color: red"> *</label> <label style="color: red"> *</label> </label>
                                      <select placeholder="Blood Group" class="form-control  focused" id='blood_group' name='blood_group' style="color: black" required>
                                          <option></option>
                                          <option>A+</option>
                                          <option>A-</option>
                                          <option>AB+</option>
                                          <option>AB-</option>
                                          <option>O+</option>
                                          <option>O-</option>
                                          <option>B+</option>
                                          <option>B-</option> 
                                      </select>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="pl-lg-4">
                              <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label for="datepicker" class="form-control-label">Date of Birth<label style="color: red"> *</label> </label>
                                      <input type="date" value="DD/MM/YYY" id="datepicker"  style="color: black" class="  focused form-control" placeholder="DD/MM/YYYY" required name="date_of_birth"/>
                                  </div>
                                </div>
                              </div>
                            </div>

                                <hr class="my-4">
                              <!-- Address -->
                              <h6 class="heading-small text-muted mb-4">Contact information</h6>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="email">Email address<label style="color: red"> *</label> </label>
                                      <input type="email" name="email" class="form-control  focused"  style="color: black" id="email" placeholder="example@gmail.com" required title="Enter a valid email">
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="phone_number">Phone Number<label style="color: red"> *</label> </label>
                                      <input type="text" name="phone_number" class="form-control  focused" id="phone_number" placeholder="Phone Number" pattern="[0-9]{}" style="color: black"  required title="Not a mobile number">
                                    </div>
                                </div>
                              </div>
                            </div>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="address">Address<label style="color: red"> *</label> </label>
                                      <input name="address" id="address"  style="color: black" class="form-control focused " placeholder="Home Address" required type="text">
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="input-city">City<label style="color: red"> *</label> </label>
                                      <!--<input type="text" id="city" class="form-control " placeholder="City" name="city">-->
                                      <select class="form-control  focused" name="city" id="city" style="color: black" size="1" required>
                                      <option value="" selected="selected" style="color: black" >Select City</option>
                                      </select>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group">
                                      <label class="form-control-label" for="pincode">Pincode code<label style="color: red"> *</label> </label>
                                      <input type="textr"  style="color: black" id="pincode" class="form-control  focused" placeholder="Postal code" name="pincode" required title="Invalid Pincode" pattern="[0-9]{}">
                                    </div>
                                  </div>
                                </div>
                                 
                              </div>
                              <hr class="my-4">
                              <h6 class="heading-small text-muted mb-4">About</h6>
                              <div class="row">
                                  <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="address">Any Message<label style="color: white"> *</label> </label>
                                      <textarea name="message" style="color: black;resize: none;" id="address" class="form-control  focused" rows="3" ></textarea>
                                    </div>
                                  </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-primary btn-lg" align='center'>Request</button>
                          </div>
                        </div>
                      </form>
                      <br>
