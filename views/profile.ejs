<%- include("./partials/header") -%>
<head>
    <title>DONOR FINDER</title>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/home.css"></link>
    </head> 
    <body>
        <%- include("navbar") -%>
            <br><br>

               <%- include("flash") -%> 
                <% if(user){%>
                <h1>Profile</h1>
                <br>
               
                <form>
                      <div class="col-xl-8 order-xl-1">
                        <div class="card bg-secondary shadow">
                          <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                              <div class="col-8">
                                <h3 class="mb-0">User  Details</h3>
                              </div>
                            </div>
                          </div>
                         
                          <div class="card-body">
                              <h6 class="heading-small text-muted mb-4">User information</h6>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="first_name" name="first_name" id="first_name">First name</label>
                                      <label  id="input-first-name" class="form-control form-control-alternative" name="first_name"><%=user.first_name%> </label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="last_name">Last name</label>
                                      <label name="last_name" class='form-control form-control-alternative' id='last_name' ><%=user.last_name%></label>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="pl-lg-4">
                              <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for='gender'>Gender</label>
                                      <label class="form-control-alternative form-control" name="gender"><%=user.gender%>
                                      </label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="blood_group">Blood group</label>
                                      <label class="form-control form-control-alternative" name="blood_group">
                                        <%=user.blood_group%>
                                      </label>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="pl-lg-4">
                              <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label for="datepicker" class="form-control-label">Date of Birth</label>
                                      <label  id="datepicker" class="form-control-alternative form-control" placeholder="DD/MM/YYYY"  name="date_of_birth">
                                      <%=user.date_of_birth%>
                                    </label>
                                  </div>
                                </div>
                              </div>
                            </div>
                                <hr class="my-4">
                              <!-- Address -->
                              <h6 class="heading-small text-muted mb-4">Contact information</h6>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="email">Email address</label>
                                      <label class="form-control form-control-alternative" name="email"><%=user.email%></label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="phone_number">Phone Number</label>
                                      <label class="form-control-alternative form-control" name="phone_number"><%=user.phone_number%></label>
                                    </div>
                                </div>
                              </div>
                            </div>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="address">Address</label>
                                      <label class="form-control form-control-alternative" name="address"><%=user.address%></label>
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="input-city">City</label>
                                      <label class="form-control form-control-alternative" name="city"><%=user.city%></label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group">
                                      <label class="form-control-label" for="pincode">Pincode code</label>
                                      <label class="form-control-alternative form-control" name="pincode"><%=user.pincode%></label>
                                    </div>
                                  </div>
                                </div>
                                 
                              </div>
                              
                              

                              <%if(donation){%>

                              <hr class="my-4">
                              <h6 class="heading-small text-muted mb-4">More information</h6>
                              <% if(currentUser && user.donor_id.equals(currentUser._id)){ %>
                              <h4 style="color: red">You can Edit this in Settings</h4><br>
                              <% } %>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label">Number of Times Donated Blood</label>
                                      <label class="form-control form-control-alternative" ><%=donation.no_of_times_donation%></label>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="phone_number">Date of Previous Donation</label>
                                      <label class="form-control-alternative form-control" name="phone_number"><%=donation.last_date_donation%></label>
                                    </div>
                                </div>
                              </div>
                            </div>
                            <%}%>






                            </div>
                            <% if(currentUser && user.donor_id.equals(currentUser._id)){ %>
                              <a href="/editprofile"  class="btn btn-primary btn-lg" align='center' > Edit</a>
                              <% } %>
                          </div>
                        </div>
                      </form>
                      <% }%>
                      <%if(!user){%>
                      <h2 style="color: red; font-weight: bold;"> Profile Not Created By the User</h2>
                      <%}%>
                      <br>
                <%- include("./partials/footer") -%>