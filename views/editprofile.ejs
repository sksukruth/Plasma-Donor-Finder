                <h1>Profile Details</h1>
                <br>
                <form action='/editprofile' method='POST'>
                      <div class="col-xl-8 order-xl-1">
                        <div class="card bg-secondary shadow">
                          <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                              <div class="col-8">
                                <h3 class="mb-0">User  Details</h3>
                              </div>
                            </div>
                          </div>
                          <div class="card-body">
                              <h6 class="heading-small text-muted mb-4">User information</h6>
                              <h5 style="color: red">Required Fields *</h5>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="first_name" name="first_name" id="first_name">First name <label style="color: red"> *</label> </label>
                                      <input type="text"  style="color:black;"  id="input-first-name" class="form-control 
                                      " placeholder="First name" name="first_name" value="<%=user.first_name%>"required>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="last_name">Last name <label style="color:white"> *</label> </label>
                                      <input type="text" name="last_name"  style="color:black;"  class='form-control' id='last_name' placeholder="Last name" maxlength=30 title="Exceeded 30 characters" value="<%=user.last_name%>" >
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="pl-lg-4">
                              <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for='gender'>Gender <label style="color: red"> *</label> </label>
                                      <select placeholder="Gender"  style="color:black;"  class="form-control" id='gender' name='gender' value="<%=user.gender%>" required>
                                            <option><%=user.gender%></option>
                                            <option>Male</option>
                                            <option>Female</option> 
                                        </select>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="blood_group">Blood group <label style="color: red"> *</label> </label>
                                      <select placeholder="Blood Group"  style="color:black;" class="form-control" id='blood_group' name='blood_group' value="<%=user.blood_group%>" required>
                                          <option><%=user.blood_group%></option>
                                          <option>A+</option>
                                          <option>A-</option>
                                          <option>AB+</option>
                                          <option>AB-</option>
                                          <option>O+</option>
                                          <option>O-</option>
                                          <option>B+</option>
                                          <option>B-</option> 
                                      </select>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="pl-lg-4">
                              <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label for="datepicker" class="form-control-label">Date of Birth <label style="color: red"> *</label> </label>
                                      <input type="date" id="datepicker"  style="color:black;"  class="
                                       form-control" placeholder="DD/MM/YYYY" required name="date_of_birth" value="<%=user.date_of_birth%>" >
                                  </div>
                                </div>
                              </div>
                            </div>
                                <hr class="my-4">
                              <!-- Address -->
                              <h6 class="heading-small text-muted mb-4">Contact information</h6>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="email">Email address <label style="color: red"> *</label> </label>
                                      <input type="email" name="email"  style="color:black;"  class="form-control 
                                      " id="email" placeholder="example@gmail.com" required title="Enter a valid email"  value="<%=user.email%>" >
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="phone_number">Phone Number <label style="color: red"> *</label> </label>
                                      <input type="text" name="phone_number"  style="color:black;"  class="form-control 
                                      " id="phone_number" placeholder="Phone Number" pattern="[0-9]{}" required title="Not a mobile number"  value="<%=user.phone_number%>" >
                                    </div>
                                </div>
                              </div>
                            </div>
                              <div class="pl-lg-4">
                                <div class="row">
                                  <div class="col-md-12">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="address">Address <label style="color: red"> *</label> </label>
                                      <input name="address" id="address"  style="color:black;"  class="form-control 
                                      " placeholder="Home Address" required type="text"  value="<%=user.address%>" >
                                    </div>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="col-lg-6">
                                    <div class="form-group focused">
                                      <label class="form-control-label" for="input-city">City <label style="color: red"> *</label> </label>
                                      <select class="form-control"  style="color:black;"  name="city" id="city" size="1" value="<%=user.city%>" >
                                      <option selected="selected" value="<%= user.city %><"><%= user.city %></option>
                                      </select>
                                    </div>
                                  </div>
                                  <div class="col-lg-6">
                                    <div class="form-group">
                                      <label class="form-control-label" for="pincode">Pincode code <label style="color: red"> *</label>   </label>
                                      <input type="text" id="pincode"  style="color:black;"  class="form-control 
                                      " placeholder="Postal code" name="pincode"  value="<%=user.pincode%>" pattern="[0-9]{}" title='Invalid Pincode' required>
                                    </div>
                                  </div>
                                  <input type="hidden" name="security" value="<%=user.security%>">
                                </div>
                                 
                              </div>

                            </div>
                            <button type="submit" class="btn btn-primary btn-lg" align='center'>Update</button>
                          </div>
                        </div>
                      </form>
                      <br>
                <%- include("./partials/footer") -%>